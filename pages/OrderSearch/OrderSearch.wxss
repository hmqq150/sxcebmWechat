/* pages/OrderSearch/OrderSearch.wxss */
@import '../common.wxss';

.weui-form-preview {
  margin-bottom: 20rpx;
}

.page .demo0 {
  height: 60px;
  background: white;
}

.van-dropdown-menu {
  border-top: 1px solid #f3f4f4;
}

.van-dropdown-menu .van-dropdown-menu__item:first-child {
  border-right: 1px solid #f3f4f4;
}

.page {
  width: 94%;
  margin: 40rpx auto 0 auto;
}

.page__bd {
  padding-bottom: 0 !important;
  background-color: transparent !important;
}

.weui-form-preview {
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #fff !important;
}

.weui-form-preview::before,
.weui-form-preview::after {
  border: none !important;
}

.top_box {
  padding: 0 32rpx !important;
}

.top_box .weui-form-preview__label {
  font-size: 30rpx !important;
  color: #000 !important;
}

.bottom_box .weui-form-preview__label {
  font-size: 28rpx !important;
  color: #000 !important;
}

.weui-form-preview__value_in-hd,
.weui-form-preview__value {
  font-size: 30rpx !important;
  color: #999 !important;
}


.table {
  display: inline-flex;
  flex-direction: column;
  border: 1rpx solid #ddd;
  border-radius: 25rpx;
}

.scrollClass {
  display: flex;
  width: 100%;
  white-space: nowrap;
  margin-top: 23px;
  height: 100%;
  background-color: #fff;
  border-radius: 25rpx;
}

.table_header,.table_main {
  display: inline-flex;
}

.th,.td {
  display: flex;
  flex-direction: column;
  padding:30rpx 0;
  border-right: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  justify-content: center;
  align-items: center;
  width: 280rpx;
}

.child-td{
  padding:30rpx 0;
  border-right: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  text-align: center;
  width: 280rpx;
}

.th{
  border-top: none;
}

.cell_label,.table_Text_class {
  font-size: 28rpx;
}

.table_Text_class{
  white-space:normal;
  word-break:break-all; 
}

.width-100{
  width: 99.7%;
  border-radius: 25rpx;
}
.flex_1{
  flex: 1 !important;
}
.flex{
  display: flex !important;
}
.table_header>.th:last-child,.table_main>.td:last-child{
  border-right: none;
}

.bottom_button{
  padding:40rpx 0;
  text-align: center;
}
.cancel_button{
  left:-10rpx;
}
.new_button{
  right: -10rpx;
}
.new_button,.cancel_button{
  display: inline-block !important;
  width: 43% !important;
  line-height: 44px !important;
  font-weight: normal !important;
  border-radius: 10rpx !important;
}
