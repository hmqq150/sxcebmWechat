/* pages/Businesser/KaipingConfirm/KaipingConfirm.wxss */
@import '../../common.wxss';

.weui-form-preview{
    margin-bottom: 25px;
}
.bottom_button{
    padding:40rpx 0;
    text-align: center;
  }
  .cancel_button{
    left:-10rpx;
    background-color: transparent !important;
    border-color: #636363 !important;
  }
  .new_button{
    right: -10rpx;
  }
  .new_button,.cancel_button{
    display: inline-block !important;
    width: 43% !important;
    line-height: 44px !important;
    font-weight: normal !important;
    border-radius: 10rpx !important;
  }
  .weui-form-preview{
    margin:20rpx 0;
    background-color: transparent !important;
  }
  .top_box{
    width: 94%;
    box-sizing: border-box;
    margin:0 auto 20rpx auto;
    border-radius: 10rpx;
    background-color: #fff;
    overflow: hidden;
  }
  .bottom_box{
    width:94%;
    margin:0 auto;
    box-sizing: border-box;
    background-color: #fff;
    border-radius: 10rpx;
  }
  .weui-form-preview__label{
    color: #000 !important;
    font-size: 30rpx;
  }
  .title_line{
    padding:32rpx 32rpx 20rpx 32rpx;
    position: relative;
  }
  .left_line{
    position: absolute;
    width: 8rpx;
    height: 34rpx;
    border-top-right-radius: 6rpx;
    border-bottom-right-radius: 6rpx;
    left: 0;
    top: 43rpx;
  }
  .title_tag{
    position: absolute;
    right: 0;
    top: 0;
    width: 150rpx;
    text-align: center;
    height: 45rpx;
    line-height: 45rpx;
    font-size: 24rpx;
    color: #fff;
    border-bottom-left-radius: 16rpx;
  }
  .title_label{
    font-size: 30rpx;
    color: #000;
  }
  .title_value{
    font-size: 50rpx;
    color: #000;
    margin-top: 14rpx;
  }
  .top_insideNo{
    padding: 5rpx 32rpx;
    background-color: #666;
    color: #fff;
    font-size: 28rpx;
  }
  .top_insideNo .weui-form-preview__label{
    color: #fff !important;
    font-size: 28rpx;
  }
  .weui-form-preview::before,.weui-form-preview::after{
    border:none !important;
  }
